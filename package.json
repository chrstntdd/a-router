{
  "name": "@chrstntdd/router",
  "version": "0.0.11",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "source": "src/index.tsx",
  "types": "dist/src",
  "private": false,
  "files": [
    "dist/src",
    "dist/index.*"
  ],
  "sideEffects": false,
  "author": "Christian Todd <christian.todd7@gmail.com> (https://www.chrstntdd.com/)",
  "description": "Just a router for react",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrstntdd/router.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "./node_modules/.bin/jest --coverage",
    "test-auto": "./node_modules/.bin/jest --watch --verbose",
    "test-fast": "./node_modules/.bin/jest --silent",
    "build": "rm -rf dist && microbundle -f es,cjs --no-compress --external react",
    "use": "NODE_ENV='development' ts-node -P ./scripts/tsconfig.node.json ./scripts/start.ts ",
    "use-prod": "NODE_ENV='production' ts-node -P ./scripts/tsconfig.node.json ./scripts/build.ts && ts-node -P ./scripts/tsconfig.node.json ./scripts/mock-server.ts",
    "start": "concurrently -k -p '[{name}]' -n 'RouterLibrary,ExampleUsage' -c 'green.bold,cyan.bold' 'yarn build -w' 'yarn use'",
    "prettier": "./node_modules/.bin/prettier '{src,dist}/**/*.{ts,tsx,js,mjs,mdx}' --write",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "pub-check": "rm -rf dist && yarn build && yarn prettier && npm pack --dry"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test-fast && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "peerDependencies": {
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.6",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.9.4",
    "@types/react": "^16.7.21",
    "@types/react-dev-utils": "^7.0.0",
    "@types/react-dom": "^16.0.11",
    "@types/webpack": "^4.4.24",
    "@types/webpack-dev-server": "^3.1.2",
    "babel-jest": "^24.1.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "body-parser": "^1.18.3",
    "clean-webpack-plugin": "^1.0.1",
    "compression": "^1.7.3",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "express": "^4.16.4",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "html-webpack-plugin": "^4.0.0-beta.5",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.2",
    "jest-watch-typeahead": "^0.2.1",
    "lint-staged": "^8.1.0",
    "microbundle": "^0.10.0",
    "mini-css-extract-plugin": "^0.5.0",
    "morgan": "^1.9.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "^1.16.4",
    "react": "^16.8.3",
    "react-dev-utils": "^7.0.3",
    "react-dom": "^16.8.3",
    "react-testing-library": "^5.9.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.3",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.5",
    "webpack-dev-server": "^3.2.0",
    "webpack-stylish": "^0.1.8"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "\\.d\\.ts$"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "<rootDir>/src",
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]",
      "\\.d\\.ts$"
    ],
    "testRegex": "\\.spec\\.(ts|tsx)$",
    "testURL": "http://localhost:3000",
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "react-testing-library/cleanup-after-each",
      "jest-dom/extend-expect"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
