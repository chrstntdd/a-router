{
  "name": "a-router",
  "version": "0.0.1",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "source": "src/index.tsx",
  "types": "dist/src",
  "files": [
    "dist/src",
    "dist/index.*"
  ],
  "sideEffects": false,
  "author": "Christian Todd <christian.todd7@gmail.com> (https://www.chrstntdd.com/)",
  "license": "MIT",
  "scripts": {
    "test": "./node_modules/.bin/jest --coverage",
    "test-auto": "./node_modules/.bin/jest --watch --verbose false",
    "test-fast": "./node_modules/.bin/jest --silent",
    "build": "rm -rf dist && microbundle -o dist/index.js -f es,cjs --external react,scheduler --global react",
    "rollup": "rm -rf dist && ./node_modules/.bin/rollup -c rollup.config.js",
    "use": "./node_modules/.bin/webpack-dev-server --quiet --color -d --config webpack.config.js",
    "use-prod": "./node_modules/.bin/webpack -p --color ---config webpack.config.js",
    "pub:check": "yarn build && npm pack --dry"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test-fast && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "kcd-scripts": "^0.45.0",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.9",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "body-parser": "^1.18.3",
    "clean-webpack-plugin": "^1.0.0",
    "compression": "^1.7.3",
    "cross-env": "^5.2.0",
    "fuse-box": "^3.6.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "invariant": "^2.2.4",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.1",
    "jest-watch-typeahead": "^0.2.0",
    "lint-staged": "^8.0.5",
    "microbundle": "^0.7.0",
    "morgan": "^1.9.1",
    "prettier": "^1.15.2",
    "react-testing-library": "^5.3.0",
    "rollup": "^0.67.3",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "source-map-loader": "^0.2.4",
    "ts-jest": "23.1.4",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx,jsx}"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coveragePathIgnorePatterns": [
      "\\.d\\.ts$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]",
      "\\.d\\.ts$"
    ],
    "testURL": "http://localhost:3000",
    "transform": {
      "^.+\\.(scss|css)$": "<rootDir>/config/testing/style-mock.js",
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "setupFiles": [
      "<rootDir>/config/testing/jest-setup.js"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/testing/file-mock.js",
      "^.+\\.(scss|css)$": "<rootDir>/config/testing/style-mock.js",
      "^@[/](.*)": "<rootDir>/src/client/$1"
    },
    "moduleDirectories": [
      "<rootDir>/src",
      "node_modules"
    ],
    "testRegex": "\\.spec\\.(js|ts|jsx|tsx)$",
    "globals": {
      "ts-jest": {
        "babelConfig": {
          "env": {
            "test": {
              "plugins": [
                "dynamic-import-node"
              ]
            }
          }
        }
      }
    }
  }
}
