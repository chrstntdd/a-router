{
  "name": "@chrstntdd/router",
  "version": "0.0.2",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "source": "src/index.tsx",
  "types": "dist/src",
  "private": false,
  "files": [
    "dist/src",
    "dist/index.*"
  ],
  "sideEffects": false,
  "author": "Christian Todd <christian.todd7@gmail.com> (https://www.chrstntdd.com/)",
  "license": "MIT",
  "scripts": {
    "test": "./node_modules/.bin/jest --coverage",
    "test-auto": "./node_modules/.bin/jest --watch --verbose false",
    "test-fast": "./node_modules/.bin/jest --silent",
    "build": "microbundle --external react,scheduler",
    "use": "./node_modules/.bin/webpack-dev-server --quiet --color -d --config webpack.config.js",
    "use-prod": "./node_modules/.bin/webpack -p --color ---config webpack.config.js",
    "pub:check": "rm -rf dist && yarn build -f es --no-compress & yarn build -f cjs --no-compress && npm pack --dry"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test-fast && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "peerDependencies": {
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "scheduler": "^0.12.0-alpha.2"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.9",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "@types/scheduler": "^0.10.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "body-parser": "^1.18.3",
    "clean-webpack-plugin": "^1.0.0",
    "compression": "^1.7.3",
    "cross-env": "^5.2.0",
    "fuse-box": "^3.6.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.1",
    "jest-watch-typeahead": "^0.2.0",
    "lint-staged": "^8.0.5",
    "microbundle": "^0.7.0",
    "morgan": "^1.9.1",
    "prettier": "^1.15.2",
    "prop-types": "^15.6.2",
    "react": "^16.7.0-alpha.3",
    "react-dom": "^16.7.0-alpha.3",
    "react-testing-library": "^5.3.0",
    "source-map-loader": "^0.2.4",
    "ts-jest": "23.1.4",
    "typescript": "^3.1.6",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
