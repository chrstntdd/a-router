{
  "name": "@chrstntdd/router",
  "version": "0.0.11",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "source": "src/index.tsx",
  "types": "dist/src",
  "private": false,
  "files": [
    "dist/src",
    "dist/index.*"
  ],
  "sideEffects": false,
  "author": "Christian Todd <christian.todd7@gmail.com> (https://www.chrstntdd.com/)",
  "description": "Just a router for react",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrstntdd/router.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "./node_modules/.bin/jest --coverage",
    "test-auto": "./node_modules/.bin/jest --watch --verbose",
    "test-fast": "./node_modules/.bin/jest --silent",
    "build": "microbundle -f es,cjs --no-compress --external react",
    "use": "parcel serve usage/index.html -d example",
    "start": "concurrently -k -p '[{name}]' -n 'RouterLibrary,ExampleUsage' -c 'green.bold,cyan.bold' 'yarn build -w' 'yarn use'",
    "prettier": "./node_modules/.bin/prettier '{src,dist}/**/*.{ts,tsx,js,mjs,mdx}' --write",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "pub-check": "rm -rf dist && yarn build && yarn prettier && npm pack --dry"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test-fast && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "peerDependencies": {
    "react": "^16.8.2",
    "react-dom": "^16.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^24.0.5",
    "@types/node": "^11.9.4",
    "@types/react": "^16.7.21",
    "@types/react-dom": "^16.0.11",
    "babel-jest": "^24.0.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-dom": "^3.0.1",
    "jest-watch-typeahead": "^0.2.0",
    "lint-staged": "^8.1.0",
    "microbundle": "^0.9.0",
    "parcel": "^1.11.0",
    "postcss-modules": "^1.4.1",
    "prettier": "^1.15.3",
    "prop-types": "^15.6.2",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-testing-library": "^5.9.0",
    "style-loader": "^0.23.1",
    "typescript": "^3.3.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "\\.d\\.ts$"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "<rootDir>/src",
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]",
      "\\.d\\.ts$"
    ],
    "testRegex": "\\.spec\\.(ts|tsx)$",
    "testURL": "http://localhost:3000",
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "react-testing-library/cleanup-after-each",
      "jest-dom/extend-expect"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  }
}
