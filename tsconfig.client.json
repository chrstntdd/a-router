{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "module": "esnext", // esnext for code splitting
    "removeComments": false,
    "pretty": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules/**/*", "src/**/*.spec.*"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "usage/**/*.tsx",
    "usage/**/*.ts",
    "dist/**/*",
    "webpack.config.ts"
  ]
}
